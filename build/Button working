    }
    h1 { font-size: 2rem; margin-bottom: 1rem; }
    textarea { width: 100%; max-width: 400px; height: 150px; padding: 10px; border-radius: 5px; border: none; margin-bottom: 1rem; }
    button {
      background: white; color: #0d0d0d;
      padding: 0.8rem 1.5rem; border: none; border-radius: 6px;
      font-size: 1rem; cursor: pointer; transition: .3s;
    }
    button:hover { background: #ccc; }
