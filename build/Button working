<body>
  <h1>Build Your Resume</h1>
  <textarea id="prompt" placeholder="Tell me about your experience..."></textarea>
  <button onclick="generate()">Generate Resume</button>
  <pre id="output" style="margin-top:20px; white-space: pre-wrap;"></pre>

  <script>
    async function generate() {
      const prompt = document.getElementById("prompt").value;
      const out = document.getElementById("output");
      out.innerText = "⏳ Generating...";
      try {
        const res = await fetch("/api/generate", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ prompt })
        });
        const data = await res.json();
        out.innerText = data.result;
      } catch (e) {
        out.innerText = "Error — try again.";
      }
    }
  </script>
</body>
